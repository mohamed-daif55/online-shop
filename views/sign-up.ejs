
    <%- include("includes/header.ejs") %>
    
    <div class="signUp">

        <% if( errorMessage ) { %>

            <p class="errorMessage" ><%= errorMessage %></p>

        <% } %>

        <form action="/sign-up" method="POST">
            
            <label class="signUpItems">First Name : </label>
            <input type="text" name="firstname" class="signUpItems" id="firstName"> <br>

            <label class="signUpItems">Last Name : </label>
            <input type="text" name="lastname" class="signUpItems" id="lastName"> <br>

            <label class="signUpItems">Email : </label>
            <input type="text" name="email" class="signUpItems" id="email"> <br>

            <label class="signUpItems">Password : </label>
            <input type="password" name="password" class="signUpItems" id="Password"> <br>

            <label class="signUpItems">Confirm Password : </label>
            <input type="password" name="confirmpassword" class="signUpItems" id="confirmPassword"> <br>

            <p class="signUpItems">Please select your gender:</p>
            <input type="radio" id="male" name="gender" value="male" class="gender">
            <label for="male" class="signUpItems">Male</label><br>
            <input type="radio" id="female" name="gender" value="female" class="gender">
            <label for="female" class="signUpItems">Female</label><br><br>

            <label for="birthday" class="signUpItems">Birthday:</label>
            <input type="date" id="birthday" name="birthdate" class="signUpItems"><br>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <button type="submit" class="signUpBTN" id="signUpBTN">Sign UP</button>

        </form>

    </div>

    <%- include("includes/footer.ejs") %>

</body>
</html>